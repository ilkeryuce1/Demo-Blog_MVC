@model IEnumerable<Blog_sites.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>
<hr />

@if (TempData["Blog"]!=null)//DEGER NULLL DEGIL ISE DEERLERI GOSTERIYORUZ 
{
    var blog = (Blog_sites.Models.Blog)TempData["Blog"];
    <div class="alert alert-success" role="alert">
        <span class="glyphicon glyphicon-ok">

        </span>
        <strong>
            @blog.Baslik
        </strong>
        Kayıt Edildi
    </div>
}
<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Resim)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.onay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.anasayfa)
        </th>
        <th style="width:15%;">İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Resim)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EklenmeTarihi)
            </td>
            <td>
                @if (item.onay)
                {
                    <label class="label label-success">Onaylı</label>
                }
                else
                {
                    <label class="label label-warning">Onay Bekliyor</label>

                }
                @Html.DisplayFor(modelItem => item.onay)
            </td>
            <td>
                @if (item.anasayfa)
                {
                    <label class="label label-success">Anasayfa</label>
                }
                else
                {
                    <label class="label label-danger">Anasayfa Değil</label>

                }
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })

                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
