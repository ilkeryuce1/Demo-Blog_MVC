@model IEnumerable<Blog_sites.Models.BlogModel>


@if (Model.Count() == 0)

{
    <div class="alert alert-warning">
        <h3>Kayıt bulunamadı</h3>
    </div>
}
else
{


    foreach (var blog in Model)
    {

        <div class="blog">
            <h3 class="page-header">
                @blog.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @blog.EklenmeTarihi
            </p>

            <img class="img-responsive" src="https://via.placeholder.com/450x200" alt="Alternate Text" />
            <hr />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla...", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary" })
        </div>
    }
}

